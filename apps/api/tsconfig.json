{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"],
		"outDir": "./dist",
		"paths": {
			"@app": ["./src/app.ts"],
			"@utils/*": ["./src/utils/*"],
			"@routes/*": ["./src/routes/*"],
			"@middlewares/*": ["./src/middlewares/*"],
			"@db/*": ["./src/db/*"],
			"@queries/*": ["./src/db/queries/*"],
			"@mutations/*": ["./src/db/mutations/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["tests"]
}
